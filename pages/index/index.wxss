page{
  background-color: rgb(253, 253, 252);
  /*满屏设置*/
  height: 100%;
}

.container{
  /*图片设置*/
  height: 100%;
  width: 100%;
  border: 2rpx solid lightblue;
  background: linear-gradient(rgb(166, 191, 245),white);
}
.backgroundImage{
  height: 350rpx;
  width: 100%;
}
/* 这是用户头像和功能按钮的一些样式 */
.UserPart{
  margin-top: 20rpx;
  height: 250rpx;
  width: 100%;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  border-top:none;
  display: flex;
  flex-direction: column;
  align-items: center;
  transition: all 300ms ease;
  background: linear-gradient(to right,rgb(166, 191, 245,0),rgba(255, 255, 255, 1),rgb(166, 191, 245,0))
}
.userImage{
  width: 120rpx;
  height: 120rpx;
  margin: 20rpx;
  overflow: hidden;
  position: relative;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}
.Login{
  font-size: 32rpx;
  color: #181e24;
  background-color: white;
  background-size: cover;
}
.Login::after{
  border: none;
}
.userImage::after{
  border: none;
}
